<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
            <div class="mt-4">

                <p class="text-center">Hola! Escribinos tu mensaje</p>
                <form class="form-control" action="/contacto" method="post">

                    <input class="form-control mt-4 mb-4" type="text" name="nombre" placeholder="Nombre"
                        id="inputNombre">

                    <input class="form-control mt-4 mb-4" type="" name="telefono" placeholder="Telefono"
                        id="inputTelefono">

                    <input class="form-control mt-4 mb-4" type="email" name="email" placeholder="tuemail@email"
                        id="inputEmail">

                    <textarea class="form-control mt-4 mb-4" name="mensaje" id="textEmail" cols="30" rows="10"
                        placeholder="Escribe aqui..."></textarea>

                    <button type="submit" class="btn btn-lg btn-success mt-2">Contactar</button>

                    <a class="btn btn-primary mt-2" href="/">Volver</a>

                </form>
            </div>
        </div>
    </div>
</div>